# -=-=-=-=-	NAME -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

NAME			= minishell

# -=-=-=-=-	CLRS -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

RESET		:= \033[0;39m
BLACK		:= \033[0;30m
RED			:= \033[0;91m
GREEN		:= \033[0;92m
YELLOW		:= \033[0;93m
BLUE		:= \033[0;94m
MAGENTA		:= \033[0;95m
CYAN		:= \033[0;96m
GRAY		:= \033[0;90m
WHITE		:= \033[0;97m

# -=-=-=-=-	DIRS -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

SRC_DIR	= src/
OBJ_DIR	= obj/
INC_DIR	= hdrs/
LIB_DIR = libs/
RDL_DIR = $(LIB_DIR)readline/
LFT_DIR = $(LIB_DIR)libft/

# -=-=-=-=-	CMNDS -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

CC			= gcc
#SANS		= -fsanitize=address -g
CFLAGS		= -Wall -Werror -Wextra
RM			= rm -f
MKDIR		= mkdir -p
# CP			= cp -f // possibly delete
MAKE		= make -s
MUTE		=	&> /dev/null
MK			= Makefile

# -=-=-=-=-	LIBS/HEADERS -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

LIBS		+= $(RDL_DIR)libreadline.a $(RDL_DIR)libhistory.a $(LFT_DIR)libft.a
HDRS		+= $(INC_DIR)minishell.h

# -=-=-=-=-	SOURCES -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

SRCS		:= $(notdir $(wildcard src/*.c))

# -=-=-=-=-	OBJECTS/DEPENDENCIES -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

OBJS		:= $(addprefix $(OBJ_DIR), $(SRCS:.c=.o))
DEPS		+= $(addsuffix .d, $(basename $(OBJS)))

# -=-=-=-=-	COMPILING -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- #

all:
	@$(MAKE) --no-print-directory $(LFT_DIR)
	@$(MAKE) --no-print-directory $(NAME)

$(NAME):: $(LIBS) $(OBJS)
	@$(CC) $(CFLAGS) $(SANS) $(LIBS) $(OBJS) -o $(NAME)
	@echo "$(GREEN)üêúüêåMINISHELL COMPILEDüêúüêå$(RESET)"

$(NAME)::
	@echo "$(BLUE)Nothing to be done for $@$(RESET)"

$(LIBS):
	@cd $(RDL_DIR) $(MUTE) && ./configure $(MUTE)
	@make -sC $(RDL_DIR) $(MUTE)

$(OBJ_DIR)%.o: $(SRC_DIR)%.c $(MK) $(HDRS)
	@$(MKDIR) $(dir $@)
	@if [ -e $@ ]; then \
		printf "$(MAGENTA)Re-$(RESET)"; \
	fi
	@echo "$(MAGENTA)Compiling: $<$(RESET)"
	@$(CC) -MT $@ -MMD -MP -I $(INC_DIR) $(CFLAGS) $(SANS) -c $< -o $@

clean:
	@make clean -sC $(RDL_DIR)
	@echo "$(CYAN)Readline library cleaned$(RESET)"
	@make clean -sC $(LFT_DIR)
	@echo "$(CYAN)Libft library cleaned$(RESET)"
	@$(RM) -r $(OBJ_DIR)
	@echo "$(CYAN)Objects removed$(RESET)"

fclean:	clean
	@make fclean -sC $(LFT_DIR)
	@echo "$(RED)Libft library fcleaned$(RESET)"
	@$(RM) $(NAME)
	@echo "$(RED)$(NAME) succesfully removed$(RESET)"

re: fclean all

-include $(DEPS)

.PHONY:	all clean fclean re
